---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="AnkiMate">
  <main>
    <h1>AnkiMate</h1>
    <ul role="list" class="link-card-grid">
      <Card
        href="/privacy-policies/ankimate"
        title="Ankimate プライバシーポリシー"
        body=""
      />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
